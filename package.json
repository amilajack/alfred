{
  "name": "alfred",
  "version": "0.0.0",
  "description": "A framework for upgrading JavaScript codebases",
  "preferGlobal": true,
  "private": true,
  "workspaces": [
    "examples/*",
    "packages/*",
    "tests/fixtures/*",
    "website"
  ],
  "repository": "https://github.com/amilajack/alfred.git",
  "author": "Amila Welihinda <amilajack@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_ENV=production lerna run build --stream",
    "flow-typed": "lerna run flow-typed",
    "lint": "eslint .",
    "test": "yarn build && yarn lint && lerna run lint --parallel --ignore @fixtures/*,@examples/* && lerna run flow --parallel && lerna run test --parallel --ignore '{@fixtures/*,@examples/*}' && lerna run test-all --parallel",
    "website:build": "yarn workspace @alfredpkg/website build",
    "website:clean": "yarn workspace @alfredpkg/website clean",
    "website:publish-gh-pages": "yarn workspace @alfredpkg/website publish-gh-pages && yarn website:clean",
    "website:start": "yarn workspace @alfredpkg/website start",
    "website:test": "yarn website:build",
    "website:version": "yarn workspace @alfredpkg/website version",
    "version": "lerna run build:clean && yarn build"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-flow": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.5",
    "cross-env": "^5.2.0",
    "eslint": "^5.13.0",
    "eslint-formatter-pretty": "^2.1.0",
    "flow-bin": "^0.90.0",
    "husky": "^1.3.1",
    "jest-cli": "^23.6.0",
    "lerna": "^3.10.6",
    "lint-staged": "^8.1.0",
    "shebang-loader": "^0.0.1",
    "yarn": "^1.13.0"
  },
  "eslintConfig": {
    "extends": "bliss",
    "rules": {
      "class-methods-use-this": "off",
      "flowtype-errors/show-errors": "off",
      "global-require": "off"
    }
  },
  "renovate": {
    "extends": "bliss"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": ">=8",
    "npm": ">=6.6.0",
    "yarn": ">=1.13.0"
  }
}
