{
  "description": "A framework for upgrading JavaScript codebases",
  "license": "MIT",
  "private": true,
  "repository": "https://github.com/amilajack/alfred.git",
  "bugs": "https://github.com/alfred-js/alfred/bugs",
  "homepage": "https://github.com/alfred-js/alfred",
  "author": "Amila Welihinda <amilajack@gmail.com>",
  "scripts": {
    "build": "cross-env NODE_ENV=production lerna run build --stream",
    "build-watch": "cross-env NODE_ENV=production lerna run build-watch --parallel --stream",
    "e2e": "lerna run e2e --stream",
    "e2e:clean": "rm -rf packages/cli/tests/e2e/tmp",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "spec": "jest",
    "test": "yarn e2e:clean && yarn build && yarn lint && lerna run test --parallel --ignore @fixtures/*,@examples/* && lerna run test-all --parallel",
    "version": "yarn e2e:clean & lerna run build:clean && yarn build",
    "website:build": "yarn workspace @alfred/website build",
    "website:clean": "yarn workspace @alfred/website clean",
    "website:publish-gh-pages": "yarn workspace @alfred/website publish-gh-pages && yarn website:clean",
    "website:start": "yarn workspace @alfred/website start",
    "website:test": "yarn website:build",
    "website:version": "yarn workspace @alfred/website version"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "cross-env NODE_ENV=development eslint --cache"
    ],
    "{*.json,.{babelrc,eslintrc,prettierrc,stylelintrc}}": [
      "prettier --ignore-path .eslintignore --parser json --write"
    ],
    "*.{css,scss}": [
      "stylelint --ignore-path .eslintignore --syntax scss --fix",
      "prettier --ignore-path .eslintignore --single-quote --write"
    ],
    "*.{html,md,yml}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test"
    }
  },
  "keywords": [
    "browser",
    "javascript",
    "modular",
    "node",
    "toolchain"
  ],
  "preferGlobal": true,
  "renovate": {
    "extends": "bliss"
  },
  "workspaces": {
    "packages": [
      "examples/*",
      "packages/*",
      "packages/cli/tests/e2e/tmp/*",
      "packages/cli/tests/fixtures/*",
      "packages/core/tests/fixtures/*",
      "website"
    ],
    "nohoist": [
      "examples/*/@alfred/cli",
      "packages/cli/tests/e2e/tmp/*/*",
      "packages/cli/tests/fixtures/*/*",
      "packages/core/tests/fixtures/*/*"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-export-namespace-from": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-typescript": "^7.8.3",
    "@types/node": "^13.7.0",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "cross-env": "^7.0.0",
    "eslint": "^6.8.0",
    "eslint-config-bliss": "^4.6.0",
    "eslint-formatter-pretty": "^3.0.1",
    "husky": "^4.0.10",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.7",
    "shebang-loader": "^0.0.1",
    "typescript": "^3.7.5",
    "yarn": "^1.21.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/examples",
      "<rootDir>/packages/cli/tests/fixtures"
    ]
  }
}
