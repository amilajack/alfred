{
  "name": "alfred-cli",
  "version": "0.0.1-12",
  "description": "A framework for upgrading javascript codebases",
  "bin": {
    "alf": "./lib/alfred.js",
    "alfred": "./lib/alfred.js",
    "alfred-cli": "./lib/alfred.js"
  },
  "preferGlobal": true,
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": "git@github.com:amilajack/alfred.git",
  "author": "Amila Welihinda <amilajack@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_ENV=production babel src --out-dir lib --source-maps && cp -r src/providers/resources ./lib/providers",
    "build-watch": "cross-env NODE_ENV=production babel src --out-dir lib --watch --source-maps",
    "flow": "flow",
    "flow-typed": "flow-typed install",
    "lint": "eslint --cache --format=node_modules/eslint-formatter-pretty .",
    "lint-fix": "yarn --silent lint --fix; exit 0",
    "postinstall": "yarn flow-typed",
    "spec": "jest",
    "test": "cross-env NODE_ENV=test yarn build && yarn lint && yarn flow && yarn spec",
    "version": "rm -rf lib && yarn build"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-flow": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "eslint-formatter-pretty": "^2.0.0",
    "espree": "^5.0.0",
    "flow-bin": "^0.89.0",
    "flow-typed": "^2.5.1",
    "husky": "^1.3.1",
    "jest-cli": "^23.6.0",
    "lerna": "^3.4.3",
    "lint-staged": "^8.1.0",
    "shebang-loader": "^0.0.1"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=6.5.0",
    "yarn": ">=1.12.3"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.jsx$": "babel-jest"
    }
  },
  "files": [
    "lib"
  ],
  "eslintConfig": {
    "extends": "bliss",
    "rules": {
      "class-methods-use-this": "off",
      "flowtype-errors/show-errors": "off"
    }
  },
  "renovate": {
    "extends": "bliss"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
