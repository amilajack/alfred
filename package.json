{
  "description": "A framework for upgrading JavaScript codebases",
  "license": "MIT",
  "private": true,
  "repository": "https://github.com/amilajack/alfred.git",
  "bugs": "https://github.com/alfred-js/alfred/bugs",
  "homepage": "https://github.com/alfred-js/alfred",
  "author": "Amila Welihinda <amilajack@gmail.com>",
  "scripts": {
    "build": "cross-env NODE_ENV=production lerna run build --stream",
    "e2e": "lerna run e2e --stream",
    "e2e:clean": "rm -rf packages/cli/test/e2e/tmp",
    "flow-typed": "lerna run flow-typed",
    "lint": "eslint .",
    "test": "yarn e2e:clean && yarn build && yarn lint && lerna run lint --parallel --ignore @fixtures/*,@examples/* && lerna run flow --parallel && lerna run test --parallel --ignore @fixtures/*,@examples/* && lerna run test-all --parallel",
    "version": "lerna run build:clean && yarn build",
    "website:build": "yarn workspace @alfred/website build",
    "website:clean": "yarn workspace @alfred/website clean",
    "website:publish-gh-pages": "yarn workspace @alfred/website publish-gh-pages && yarn website:clean",
    "website:start": "yarn workspace @alfred/website start",
    "website:test": "yarn website:build",
    "website:version": "yarn workspace @alfred/website version"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "bliss",
    "rules": {
      "class-methods-use-this": "off",
      "flowtype-errors/show-errors": "off",
      "global-require": "off",
      "jest/no-export": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && cross-env ALFRED_E2E_TEST=true jest tests/fixtures/fixtures.spec.js"
    }
  },
  "keywords": [
    "browser",
    "javascript",
    "modular",
    "node",
    "toolchain"
  ],
  "preferGlobal": true,
  "renovate": {
    "extends": "bliss"
  },
  "workspaces": [
    "examples/*",
    "packages/*",
    "packages/cli/test/e2e/tmp/*",
    "tests/fixtures/*",
    "website"
  ],
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-export-namespace-from": "^7.7.4",
    "@babel/plugin-syntax-dynamic-import": "^7.7.4",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-flow": "^7.7.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.0.0",
    "babel-loader": "^8.0.6",
    "cross-env": "^6.0.3",
    "eslint": "^6.7.2",
    "eslint-config-bliss": "^4.4.0",
    "eslint-formatter-pretty": "^3.0.1",
    "eslint-plugin-flowtype-errors": "^4.1.0",
    "flow-bin": "^0.112.0",
    "husky": "^3.1.0",
    "isomorphic-fetch": "^2.2.1",
    "jest-cli": "^24.0.0",
    "lerna": "^3.13.2",
    "lint-staged": "^9.5.0",
    "shebang-loader": "^0.0.1",
    "yarn": "^1.13.0"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
