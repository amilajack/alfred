{
  "name": "{{name.npm.full}}",
  "version": "0.0.0",
  "description": "{{description}}",
{{#if isLib}}
  "main": "{{module}}",
{{/if}}
{{#if author}}
  "author": "{{author}}{{#if email}} <{{email}}>{{/if}}",
{{/if}}
{{#if license}}
  "license": "{{license}}",
{{/if}}
{{#if repository}}
  "repository": "{{repository}}",
{{/if}}
{{#if bugs}}
  "bugs": "{{bugs}}",
{{/if}}
  "devDependencies": {
    "alfred": "{{alfredPkgSemver}}"
  },
  "scripts": {
    "build": "alfred run build --prod",
    "format": "alfred run format",
    "lint": "alfred run lint",
    "start": "alfred run start",
    "test": "alfred run test"
  },
{{#if isApp}}
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
{{/if}}
{{#if isDefaultNpmClient}}
  }
{{else}}
  },
  "alfred": {
    "npmClient": "{{npmClient}}"
  }
{{/if}}
}
