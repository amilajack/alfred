{
  "name": "{{project.name.npm.full}}",
  "version": "0.0.0",
  "description": "{{project.description}}",
{{#if project.isLib}}
  "main": "{{project.module}}",
{{/if}}
{{#if project.author}}
  "author": "{{project.author}}{{#if project.email}} <{{project.email}}>{{/if}}",
{{/if}}
{{#if project.license}}
  "license": "{{project.license}}",
{{/if}}
{{#if project.repository}}
  "repository": "{{project.repository}}",
{{/if}}
{{#if project.bugs}}
  "bugs": "{{project.bugs}}",
{{/if}}
  "devDependencies": {
    "alfred": "{{alfred-pkg.semver}}"
  },
{{#if project.isApp}}
  "alfred": {
    "npmClient": "{{project.npmClient}}"
  },
{{/if}}
  "scripts": {
    "build": "alfred run build --prod",
    "format": "alfred run format",
    "lint": "alfred run lint",
    "start": "alfred run start",
    "test": "alfred run test"
  }
}
